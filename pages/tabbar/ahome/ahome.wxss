/*******************************轮播图的地址**************************************/

.sun-sousuo {
  display: flex;
  align-items: center;
  /* justify-content: center; */
  flex-direction: row;
}

.screen-swiper {
  min-height: 380rpx;
  position: relative;
}

/* 控制轮播图片的大小 */

.screen-swiper image {
  width: 100%;
  display: block;
  height: 100%;
  margin: 0;
}

.sun-label {
  width: 100%;
  height: 120rpx;
  position: absolute;
  z-index: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.sun-ssk {
  height: 70rpx;
  width: 80%;
  border-radius: 20px;
}

.tx {
  color: #fff;
  font-size: 18rpx;
}

.sun-saoma-vip {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* =====================================功能区======================================== */

.sun-function {
  width: 96%;
  background: white;
  border-radius: 10px;
  /* height: 300rpx; */
  margin-left: 2%;
  margin-top: 2%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.sun-funct-ion {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 20%;
}

.tex {
  color: black;
  font-size: 13px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.tex-price {
  color: red;
  font-size: 13px;
  margin-bottom: 2px;
}

/* =====================================广告栏================================== */

.sun-gg {
  width: 96%;
  margin-left: 2%;
  border-radius: 10px;
  height: 300px;
  margin-top: 2%;
}

/* =======================================拼购==================================== */

.sun-pingou {
  width: 96%;
  margin-left: 2%;
  border-radius: 10px;
  height: 400rpx;
  background: white;
  margin-top: 10px;
}

.sun-pingou-title {
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.sun-left-tex {
  font-size: 18px;
  margin-left: 3%;
}

.sun-rigth-tex {
  font-size: 15px;
  margin-right: 3%;
  color: red;
}

.sun-pingou-text {
  width: 100%;
  height: 80%;
  white-space: nowrap;
  /* padding: 1px; */
}

.sun-pingou-item {
  width: 115px;
  height: 100%;
  display: inline-block;
}

.sun-pingou-img {
  width: 100%;
  height: 65%;
}

.cad {
  display: flex;
  flex-direction: column;
  width: 110px;
  height: 100%;
}

/* ======================================================== */

